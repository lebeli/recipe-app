{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "react/prefer-stateless-function": "off",
    "react/jsx-props-no-spreading": "off",
    "prettier/prettier": ["error"]
  }
}
